  <script>
    let savedTitle = localStorage.getItem("tabName");
    let savedBG = localStorage.getItem("BG");
    let savedFavicon = localStorage.getItem("favicon");
    let favicon = document.getElementById("icon");
    let savedLink = localStorage.getItem("savedLink");
    let savedKey = localStorage.getItem("savedKey");
    if (savedTitle) {
      document.title = savedTitle;
    }
    if (savedFavicon) {
      favicon.href = savedFavicon;
    }

    let tabclosingval = localStorage.getItem("tabcloseval");

    window.onbeforeunload = () => {
      if (tabclosingval == "true") {
        return "Do you want to leave the current tab?";
      }
    }

    if (savedBG) {
      document.body.style.backgroundImage = `url("${savedBG}")`;
      document.body.style.backgroundRepeat = "no-repeat"
      document.body.style.backgroundSize = "cover";
    }

    function panic(event) {
      if (event.key === savedKey || event.key === savedKey) {
        if (savedLink.includes("https://")) {
          location.replace(savedLink);
        } else {
          location.replace("https://" + savedLink);
        }
      }
    }

    document.addEventListener("keydown", panic);

    ////////////////

    // Update the content of the HTML element with the detected time period
    function displayCurrentTime() {
      setTimeout(function () {
        function getTimePeriod() {
          let time = new Date();
          let hour = time.getHours();

          let tp;

          if (hour >= 0 && hour < 5) {
            tp = "Midnight (12 A.M. to 6 A.M.)";
          } else if (hour >= 5 && hour < 12) {
            tp = "Morning (6 A.M. to 12 P.M.)";
          } else if (hour >= 12 && hour < 18) {
            tp = "Afternoon (12 A.M. to 6 P.M.)";
          } else {
            tp = "Evening (6 P.M. to 12 A.M.)";
          }

          return tp;
        }
        document.getElementById("timePeriod").innerHTML = "Current time: " + getTimePeriod();
        foreverloop();
      }, 1000);
    }
    displayCurrentTime();
  </script>
