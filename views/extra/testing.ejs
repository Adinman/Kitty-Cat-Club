<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
<style>
    #container {
        background-color: #303030;
        padding: 3px;
        box-shadow: 0px 4px 4px 0px rgba(0, 0, 0, 0.25);
        display: flex;
        justify-content: space-between;
        align-items: center;
        position: fixed;
        top: -10px;
        z-index: 999;
        margin-top: 10px;
        justify-content: center;
        left: 0;
        right: 0;
    }

    .align-left,
    .align-right {
        flex: 1;
        display: flex;
        align-items: center;
    }

    .align-left a {
        text-decoration: none;
        color: #fff;
        transition: color 0.3s ease;
        display: flex;
        align-items: center;
    }

    .align-left a:hover {
        color: #000;
    }

    .align-left img {
        width: 30px;
        margin-right: 10px;
        margin-left: 10px;
    }

    .align-right {
        display: flex;
        align-items: center;
        justify-content: flex-end;
    }

    .align-right p {
        margin: 0;
        text-align: center;
        white-space: nowrap;
    }

    .align-right ul {
        list-style: none;
        display: flex;
    }

    .align-right li {
        margin-right: 10px;
        display: flex;
        align-items: center;
    }

    .align-right a {
        color: #fff;
        transition: color 0.3s ease;
        text-decoration: none;
    }

    .align-right a:hover {
        color: #252525;
    }

    .align-right i {
        background-color: #252525;
        width: 19px;
        padding: 10px;
        border-radius: 10px;
        transition: background 0.2s ease;
    }

    .align-right a:hover i {
        background: #FFF;
    }

    h2,
    p {
        color: #FFF;
        transition: color 0.2s ease;
    }

    #esad:hover {
        color: #505050;
    }

    a:hover {
        cursor: pointer;
    }
</style>
<link rel="stylesheet" href="./css/all.css" />
<script src="./js/clock.js"></script>
<center>
    <div id="container">
        <div class="align-left">
            <img src="./img/logo.png" alt="Logo">
            <h2><a onclick="location.replace('/dashboard')" id="esad">Kitty Cat Club</a></h2>
        </div>
        <div class="align-right">
            <p id="clock"></p>
            <ul>
                <li>
                    <a onclick="location.replace('/dashboard')">
                        <i class="fa-solid fa-house"></i>
                    </a>
                </li>
                <li>
                    <a onclick="location.replace('/gxmes')">
                        <i class="fa-solid fa-gamepad"></i>
                    </a>
                </li>
                <li>
                    <a onclick="location.replace('/apps')">
                        <i style="width: 15px;" class="fa-solid fa-border-all"></i>
                    </a>
                </li>
                <li>
                    <a onclick="location.replace('/settings')">
                        <i style="width: 15px;" class="fa-solid fa-gear"></i>
                    </a>
                </li>
                <li>
                    <a onclick="location.replace('/extra')">
                        <i class="fa-solid fa-box"></i>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</center>
<script>
    let hideclock = localStorage.getItem("clockvisibility");
    let clack = document.getElementById("clock");
    if (hideclock === "true") {
        clack.style.display = "none";
    } else {
        clack.style.display = "";
    }
</script>